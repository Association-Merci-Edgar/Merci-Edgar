  / _____________________ infos-mini  
  #infos-mini.span4
    - if @venue.relative
      %ul.list-infos
        %li.infolabel
          Contact principal
        %li
          .pic.pic-small= image_tag @venue.relative.avatar
          = link_to @venue.relative do
            %h4= @venue.relative
        %li= @venue.relative.title(@venue)
        %li= @venue.relative.phone_number
        %li= @venue.relative.email_address
  
    %ul.list-infos
      - if @venue.address
        %li.infolabel= t(@venue.address.kind, scope: "simple_form.options.venue.addresses.kind")
        %li= @venue.address.full_address
      %li= @venue.email_address
      
    %ul.list-infos
      %li.infolabel Autres
      - @venue.emails.each do |email|
        = render email

      - @venue.phones.each do |phone|
        = render phone
        

