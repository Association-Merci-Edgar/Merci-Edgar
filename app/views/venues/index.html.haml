              %i.entypo.edi-pencil
            = link_to venue, :class => "shybtn", :method => :delete, :data => { :confirm => 'DELETE : Are you sure?' } do
              %i.entypo.edi-cross
          = link_to venue do 
            
            %h3= venue.name
            
            /%i.entypo.edi-house
            .pic-container
              .pic
                /%i.entypo.edi-house
                <img src="http://maguette.niang.free.fr/gandi-wene.jpg" />
          %span
            2, rue machin — 75020 Paris 
          .tags
            %span.tag.tag-type SMAC
            %span.tag.tag-style Rock
            %span.tag.tag-style Punk
            %span.tag.tag-style Jeune public
            %span.tag.tag-legal Co-réalisation
            %span.tag.tag-legal Location
            
          /%td= link_to 'Show', venue
          /%i.entypo.edi-house
          /%td= link_to 'Destroy', venue, :method => :delete, :data => { :confirm => 'Are you sure?' }
          
      .plus-in-list
        = link_to new_venue_path do
          %i.entypo.edi-plus-3
          %span
            New Venue