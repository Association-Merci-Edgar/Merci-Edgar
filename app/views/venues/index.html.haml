        50 résultats
        .meta
          %a.shybtn{:href => "#",:title => "bulk / Traitement par lot",:rel => "tooltip"}
            %i.entypo.edi-list
      - @venues.each do |venue|
        %li
          .meta
          
            %a{:href => "#"}
              %i.entypo.edi-chat
              
            %a{:href => "#"}
              %i.entypo.edi-flag
            %a{:href => "#"}
