#tasks
  - if @pending_tasks.any?
    .title-infos
      /dont
      - if @pending_tasks.overdue.any?
        .badge.badge-small.badge-black= @pending_tasks.overdue.size
        en retard,
      - if @pending_tasks.due_today.any?
        .badge.badge-small.badge-red= @pending_tasks.due_today.size
        pour aujourd’hui  

    = render :partial => "tasks/group", :locals => {:tasks => @pending_tasks, :due => :overdue, :asset => @venue, :color => "black"}
    = render :partial => "tasks/group", :locals => {:tasks => @pending_tasks, :due => :due_today, :asset => @venue, :color => "red"}
    = render :partial => "tasks/group", :locals => {:tasks => @pending_tasks, :due => :due_tomorrow, :asset => @venue, :color => "blue"}
    = render :partial => "tasks/group", :locals => {:tasks => @pending_tasks, :due => :due_this_week, :asset => @venue, :color => "green"}
    = render :partial => "tasks/group", :locals => {:tasks => @pending_tasks, :due => :due_next_week, :asset => @venue, color:"gray"}
    = render :partial => "tasks/group", :locals => {:tasks => @pending_tasks, :due => :due_this_month, :asset => @venue, color:"gray"}


.btn-in-list
  %a{:href => "#"}
    /= link_to new_venue_person_path(@venue) do
    %i.entypo.edi-plus-3
    %span
      Créer une nouvelle tâche