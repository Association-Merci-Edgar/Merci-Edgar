!!!
%html
  %head
    = render 'layouts/head_app'
  %body
    = render 'layouts/ga'
    #mainwrapper.mainwrapper

      .togglemenu
        = render 'layouts/togglemenu'

      #plusmenu
        = render 'layouts/plus_menu' if ["index","show"].include?(params[:action]) && (controller_name != "projects")
        /= yield(:plus_menu)

      .leftpanel
        = render 'layouts/left_panel'

      .mainpanel
        = render 'layouts/search_modal'
        .maincontent
          .maincontentinner#top
            = yield

    = render 'layouts/modal'
    = render 'layouts/javascripts_app'

