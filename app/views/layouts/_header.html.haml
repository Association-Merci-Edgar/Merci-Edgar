/
  \######################  START HEADER ######################
  \==============================================================

%header#header-section.headertop.needhead
  / START PARALLAX BG
  .innerbg
    .overlaybg
      /
        \###################### START TOP MENU ####################
        \==============================================================
      .nav-top
        / navbar-fixed-top
        #top-nav.navbar.navbar-fixed-top
          / INNER
          .navbar-inner
            .container
              / Collapse button
              %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              .logo
                -#
                  %i.ed-icon-ed-logo-bkg.logotype
                  %a{:href => "#header-section"}
                    %i.ed-icon-ed-logo.logotype
                %a{:href => "#header-section"}
                  %img{:alt => "", :src => "images/logo-edgar-horiz.png"}/
              -#    
                #baseline
                  = t("home.baseline").html_safe
                

                
              / TOP NAVIGATION
              #main-nav.scroller-spy
                %nav.nav-collapse.collapse.pull-right
                  %ul#nav.nav
                    
                    %li.active.hidden
                      = link_to locale_root_path, :anchor => "header-section" do
                        %i.ed-icon-home
                    %li
                      = link_to t("home.menu.what"), locale_root_path(:anchor => "features-anchor")
                    %li
                      = link_to "Edgar TV", locale_root_path(:anchor => "tv-section")
                    %li
                      = link_to t("home.menu.news"), locale_root_path(:anchor => "news-section")
                    %li
                      = link_to t("home.menu.who"), locale_root_path(:anchor => "team-section")
                      
                  #login-tab
                    - if user_signed_in?
                      - if current_user.has_role? :admin
                        = link_to "Administration", users_path
                      = link_to t("simple_form.labels.defaults.signout"), destroy_user_session_path, :method => :delete
                    - else
                      /= link_to t("simple_form.labels.defaults.signin"), new_user_session_path
                  
                      /%a{:href => "#", :class => "login-btn login-toggle"}
                      .login-btn.login-toggle
                        =t("simple_form.labels.defaults.signin")
                    
                  #login-form.invisible
                    .close-btn.login-btn.login-toggle
                      x
                    .form-signin
                      
                      /%h2 #{t("simple_form.labels.defaults.signin")}
                      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
                        = f.input_field :email, :autofocus => true, :class => "medium", placeholder:"#{t("simple_form.labels.defaults.email")}"
                        = f.input_field :password, :class => "small", :placeholder => "#{t("simple_form.labels.defaults.password")}"
                        /= f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
                        = render "devise/shared/links"
                        = f.button :submit, t("simple_form.labels.defaults.signin"), :class => 'login-btn login-submit'
                        /= link_to t("simple_form.labels.defaults.signin"), new_user_session_path
                      
                
      /
        \############################ END TOP MENU ###############
        \==========================================================
      = yield(:hero)
      
    / /overlaybg
  / / END PARALLAX BG
/
  \/ ###################### END MAIN HEADER ####################
  \===============================================================