- content_for :facebook_og do
  = tag('meta', content: "#{request.base_url}/#{image_path('multipage/edgar-head.png')}", property: "og:image")
  = tag('meta', content: "#{request.base_url}/#{image_path('multipage/vitrinne-banner-launch2.jpg')}", property: "og:image")

- content_for :hero do
  .hero-unit#hero-launch.gradient
    .container
      = render 'showcase/submenu'
    .row-fluid.hero-launch
      = image_tag("multipage/vitrinne-banner-launch2.png")

%section#features-section
  .container
    .row-fluid.label-blocks
      .span4
        .label.label-large.label-info
          = image_tag("multipage/pic-photo-2.png")
        %h4= t("home.features.track_1")
        %p= t("home.features.track_what_1")
      .span4
        .label.label-large.label-info
          = image_tag("multipage/pic-photo-4.png")
        %h4= t("home.features.schedule")
        %p= t("home.features.schedule_what")
      .span4
        .label.label-large.label-info
          = image_tag("multipage/pic-photo-3.png")
        %h4= t("home.features.communicate")
        %p= t("home.features.communicate_what").html_safe
%section.cta.cta-invi
  .container
    %h3
      = link_to features_path do
        %i.ico.edi-info2
          Découvrir les fonctionnalités de Merci Edgar
%space

