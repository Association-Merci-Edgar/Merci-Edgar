$('#myModalContent').replaceWith('<%= j render("ajax_form") %>');
$('.datepicker').datetimepicker();

$('.task_calendar').hide();

$('#task_bucket').change(function() {
  $('.datepicker').val("");
  if ( $(this).val() == "specific" ) {
    $('.task_calendar').css('display', 'inline-block');
    $('.datepicker').focus();
  } else {
    $('.task_calendar').hide();
  }
});

$('.datepicker').change(function() {
  $('#task_bucket').val("specific");
});

