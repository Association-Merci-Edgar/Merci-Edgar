- content_for :scripts do
  = javascript_include_tag "tasks_group"
  
- if (the_tasks = tasks.send(due)).any?
  %ul.list-medium
    - the_tasks.send(due).each do |t|
      %li
        %span.pull-left{title:"Marquer comme éffectué", "data-placement"=>"top-left", "data-toggle"=>"tooltip", "data-html"=>"true"}
          %input{:type => "checkbox", :class=>"checkbox", :onclick=>"goTask(this)"}
          %label
        .rightrow.small
          = show_badge(color, t.specific_time? ? t.friendly_date : t(due))
          .actions
            -#%a.shybtn{:href => "#"}
            - if asset.present?
              = link_to send("edit_#{asset.class.name.downcase}_task_path",asset,t), :class => "shybtn" do
                %i.entypo.edi-pencil
            - else
              = link_to edit_task_path(t), :class => "shybtn" do
                %i.entypo.edi-pencil
                
        .mainrow
          .title
            - if asset.present?
              = link_to t.name, send("edit_#{asset.class.name.downcase}_task_path",asset,t), remote:true
            - else
              = link_to t.name, edit_task_path(t)
          
          .infos-line
            - if t.asset.present?
              .infos-part
                = link_to t.asset do
                  .pic.pic-mini= image_tag t.asset.avatar
                  = t.asset.name
            - if t.project.present?
              .infos-part
                %a{:href => "#"}
                  .pic.pic-mini= image_tag t.project.avatar
                  = t.project.name
              .infos-part
                %a{:href => "#"}
                  .pic.pic-mini= image_tag t.assignee.avatar
                  = t.assignee.nickname
        