- unless reporting.new_record?
  %li{id: "reporting_#{reporting.id}"}
    %h4= l reporting.created_at, format: :abbrev

    .infos
      .pic.pic-mini.pic-user= image_tag reporting.user.avatar
      = reporting.user.nickname
      - if reporting.project.present?
        .pic.pic-mini= image_tag reporting.project.avatar
        = reporting.project.name
    .actions  
      = link_to "#", class: "shybtn editbtn pull-right" do
        %i.entypo.edi-pencil
      %a.shybtn.cancel.pull-right.hidden{:href => "#"}
        %i.entypo.edi-cross
    
    .content 
      = render reporting.report
    = render partial: "reportings/form", locals: {reporting: reporting, edit:true, action: :edit}