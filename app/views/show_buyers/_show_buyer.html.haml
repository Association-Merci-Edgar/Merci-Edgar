%li{id: "show_buyer_#{show_buyer.to_param}"}
  = render partial: "contacts/contact_elem", locals: {contact: show_buyer.structure.contact, edit_link_path:edit_show_buyer_path(show_buyer) }
  

  .mainrow
    = link_to show_buyer do
      %h3
        = show_buyer.name
        - if show_buyer.contact.making_prospecting?
          %a.badge.badge-green.badge-capsule En recherche active
        - if show_buyer.contact.has_duplicates?
          = link_to "Doublon", contacts_path(duplicate_of: show_buyer.contact.dup_id), class: "a badge badge-grey doublons"

      .pic= image_tag show_buyer.avatar_url
    .infos-line
      / = render venue.capacities if venue.capacities
      = render show_buyer.address if show_buyer.address
      
    .tags
      = render partial: "tags/tags", locals: { contact: show_buyer.structure.contact}