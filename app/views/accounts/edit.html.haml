- content_for :account_tab do
  #account.tab-pane.notedit.active
    .row-fluid
      -#_____________________________________________________ Nom et domaine
      %section.span6
        %h4 Nom et domaine
        = simple_form_for(@account, url: account_path) do |f|
          = f.input :name
          = f.input :domain, label: "Le pr√©fixe de votre nom de domaine :", wrapper: "append" do
            = f.input_field :domain
            %span.add-on .merciedgar.com
          %p
          = f.button :submit, class:'btn-primary'
          
      %section.span6.comingsoon
        %h4 Forfaits et facturation
        %p
          Forfait Beta Testeur
          .badge.inline GRATUIT
          jusqu'au 31/12/2013
          <br>
          Plus que 28 jours !
        <input class="btn btn-primary" type="submit" value="Changer de forfait" name="commit">


    -#_____________________________________________________ USERS
    .row-fluid
      %section.span6
        %h4 Utilisateurs
        %ul.list.list-small
          - @account.users.each do |user|
            %li
              .meta
                .badge.badge-red= user.current_abilitation.kind
              -#.actions
                %a.shybtn{href: "/fr/people/41/edit"}
                  %i.entypo.edi-pencil
                -#
                  %a.shybtn{"data-confirm" => "DELETE : Are you sure?", "data-method" => "delete", href: "/fr/people/41", rel: "nofollow"}
                    %i.entypo.edi-cross
            
              %a{href: "#"}
                %h3= user.name
                .pic.pic-user= image_tag user.avatar
              %span.infos-line
                %a= user.email

-#
          %li
            - abilitation = Abilitation.new
            - abilitation.build_user
            = simple_form_for(abilitation, url: account_abilitations_path) do |f|
              = f.fields_for :user do |u|
                = u.input :email
              = f.submit
            
          -#_____________________________________________________ ADD NEW
          .btn-in-list
            %a
              %i.entypo.edi-plus3
              %span
                Ajouter un utilisateur

= render 'devise/shared/profile'