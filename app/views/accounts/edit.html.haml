- content_for :account_tab do
  #account.tab-pane.active
    .row-fluid
      .span6
        %h4 Nom et domaine
        = simple_form_for(@account, url: account_path) do |f|
          = f.input :name
          = f.input :domain, label: "Le pr√©fixe de votre nom de domaine :", wrapper: "append" do
            = f.input_field :domain
