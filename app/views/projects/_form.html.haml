= simple_form_for(@project, :html => { :class => 'form-horizontal form-edit' }) do |f|
  = f.error_notification

  .form-inputs
    %header
      .control-group
        .pic-container
          .pic= image_tag @project.avatar
        .inline-inputs  
          = f.input :name, label: false, :class => "input-Xlarge"
    
        = f.input :avatar, label:false, :hint => "Lâ€™image doit faire au moins 80x80 pixels."
    = f.input :description

  .form-actions
    = f.button :submit, class:"btn-primary btn-large btn-alert"
    = link_to "Annuler", projects_path, class:"btn btn-link"
