#page-content.container
  .form-signin.medium
    .logo
      %i.entypo.edi-logoedgar_under.logotype
      %i.entypo.edi-logoedgar.logotype
      
    %h1.page-title Bienvenue !
    %h2 #{t("simple_form.labels.defaults.signin")}
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
      = f.input_field :email, :autofocus => true, :placeholder => "#{t("simple_form.labels.defaults.first_name")}"
      = f.input_field :password, :placeholder => "#{t("simple_form.labels.defaults.password")}"
      
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      -#
        .control-group.boolean.optional.user_remember_me
          .controls.ui-widget
            %input{name: "user[remember_me]", type: "hidden", value: "0"}/
            %label.checkbox
            %label.control-label
              %label.boolean.optional.control-label{for: "user_remember_me"} Remember me
          
          
        %input.btn.btn-primary{name: "commit", type: "submit", value: "Se connecter"}/
      
      
      = f.button :submit, t("simple_form.labels.defaults.signin"), :class => 'btn-primary'
    = render "devise/shared/links"
    %a Aller au site vitrine


