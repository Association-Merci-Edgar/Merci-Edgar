- content_for :user_tab do
  .row-fluid
    #profile-photo.span12
      %h4 Photo de votre profil
      .pic
        %i.entypo.edi-user
      %p
        L’image doit faire au moins 300x300px.
      %a.btn.btn-primary{:href => "#"}
        Uploader une photo
      

  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
    = f.error_notification
    = display_base_errors resource
      
    .row-fluid
  
      .span6
        %h4 Informations de base
        /= f.input :name, :autofocus => true
        = f.input :first_name, :required => true
        = f.input :last_name, :required => true
        = f.input :email, :required => true
    
        /%a.btn{:href => "#"} Mettre à jour
        = f.button :submit, 'Update', :class => 'btn-primary'
         
      .span6
        %h4 Identifiant et mot de passe
        = f.input :name
        /= f.input :password, :autocomplete => "off", :required => false, :hint => false
        /, :hint => "leave it blank if you don't want to change it"
        /= f.input :password_confirmation, :required => false
        /= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true

      
        /%a.btn{:href => "#"} Mettre à jour
        = f.button :submit, 'Update', :class => 'btn-primary'
    
  
  .row-fluid  
    .span6
      %h4 Réglages (non pris en compte pour l'instant')
      %label Fuseau horaire
      .btn-group
        %select{:name => "select"}
          %option{:value => ""} (GMT + 01:00) Paris
          %option{:value => ""} (GMT+02)
          %option{:value => ""} Selection Two
          %option{:value => ""} Selection Three
          %option{:value => ""} Selection Four

      %label Langue
      .btn-group
        %select{:name => "select"}
          %option{:value => ""} FR
          %option{:value => ""} EN
          %option{:value => ""} ES
          %option{:value => ""} DE
      
      %label Pays par défauls lors de l’ajout
      .btn-group
        %select{:name => "select"}
          %option{:value => ""} France
          %option{:value => ""} England
          %option{:value => ""} Etc...
        
      %p
        %a.btn.btn-primary{:href => "#"} Mettre à jour
        /= f.button :submit, 'Update', :class => 'btn-primary'
    
      
  
= render 'devise/shared/profile'
